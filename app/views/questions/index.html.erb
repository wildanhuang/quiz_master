<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Questions
      <small><%= link_to "Add New", new_question_path, class: 'btn btn-default' %></small>
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <% if @questions.blank? %>
          <tr class="blank-slate">
            <td colspan="8">
              <p>No Data<br/>Please add new question</p>
            </td>
          </tr>
        <% end %>
        <% @questions.each do |question| %>
          <tr>
            <td><%= question.title %></td>
            <td>
              <%= link_to question do %>
                <i class="glyphicon glyphicon-info-sign" aria-hidden="true"></i>
              <% end %>
              <%= link_to edit_question_path(question), class: 'edit' do %>
                <i class="glyphicon glyphicon-pencil" aria-hidden="true"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr>