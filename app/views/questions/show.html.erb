<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Show Question <%=  @question.title %></h1>
  </div>
</div>

<div class="row">  
  <div class="col-lg-1">
    Question:
  </div>
  <div class="col-lg-5">
    <%= @question.content.html_safe %>
  </div>
</div>

<div class="row">  
  <div class="col-lg-1">
    Answer:
  </div>
  <div class="col-lg-5">
    <%= @question.answer %>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <%= link_to 'Back', questions_path, class: 'btn btn-default pull-right' %>
  </div>
</div>